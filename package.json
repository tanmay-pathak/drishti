{
  "name": "drishti",
  "version": "1.0.0",
  "description": "Visual regression testing tool for websites",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "drishti": "dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "prepare": "npm run build",
    "drishti": "node dist/index.js"
  },
  "dependencies": {
    "capture-website": "^4.2.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "diff": "^7.0.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.1.1",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/diff": "^6.0.0",
    "@types/node": "^22.10.2",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=16"
  }
}
